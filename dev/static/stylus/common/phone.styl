.phone__link
  color accent-color
  font-size 20px
  font-weight bold
  display flex
  align-items center
  @extend .trs
  &:hover
    color darken(accent-color, 20%)
  span
    font-size 35px
    display block
    margin-left 5px
  @media ({screen-lg})
    font-size 16px
    span
      font-size 20px
  @media ({screen-xl})
    font-size 14px
    span
      font-size 18px
  @media ({screen-md})
    font-size: 20px
    span
      font-size 30px
  @media ({screen-sm})
    font-size 16px
    span
      font-size 20px