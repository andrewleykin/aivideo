.form
  .invalid
    .input
      border-color red-color
  .valid
    .input
      border-color accent-color

.group
  position relative

.input
  background transparent
  color white
  font-size 30px
  border-bottom 4px solid accent-color
  padding-bottom 5px
  font-family base-font
  padding-left 15px
  max-width 100%
  width 100%
  @extend .trs
  @media ({screen-sm})
    font-size 22px
  &:focus
    &+.label
      opacity 0

.label
  font-size 30px
  left 15px
  top 7px
  position absolute
  @media ({screen-sm})
    font-size 22px
    top 2px
	&.hide
		opacity 0

.sublabel
  display block
  margin-bottom 45px
  font-size 13px
  text-align center
  width 100%
  margin-top 5px
  &.hide
    opacity 1