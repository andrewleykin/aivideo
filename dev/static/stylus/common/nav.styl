.menu
  @media ({screen-md})
    display inline-block

.menu__list
  display flex
  @media ({screen-sm})
    display none
    position: absolute;
    left: -11px;
    top: 65px;
    background: white;
    width: calc(100% + 22px);
    padding-bottom 10px

.menu__item
  &+&
    .menu__link
      border-left 1px solid default-color
  @media ({screen-md})
    &:nth-last-child(2)
      display none
  @media ({screen-sm})
    &+&
      .menu__link
        border-left none

.menu__item--phone
  border-left none
  display none
  padding 10px 15px
  @media ({screen-sm})
    display block

.menu__link
  font-weight 600
  font-size 15px
  padding 10px 15px
  display block
  @extend .trs
  &:hover
    color darken(default-color, 20%)
  @media ({screen-sm})
    &:hover
      background default-color
      color white

.menu__burger
  size(20px, 3px)
  background default-color
  position relative
  cursor pointer
  @extend .trs
  display none
  @media ({screen-sm})
    display block
  &:before,&:after
    content ''
    display block
    size(20px, 3px)
    background default-color
    position absolute
    @extend .trs
  &:before
    top -6px
  &:after
    bottom -6px
  &.active
    transform rotate(45deg)
    &:after
      opacity 0
    &:before
      transform rotate(90deg)
      top 0
