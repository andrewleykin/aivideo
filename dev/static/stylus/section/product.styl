.product
  padding 50px 0
  overflow hidden

.product__item
  position relative
  @media ({screen-xl})
    &+&
      margin-top 30px
    &:before
      display none
  @media ({screen-md})
    text-align center
    &+&
      margin-top 45px
    &:nth-child(even)
      text-align center
      .product__block
        flex-direction column-reverse
      .product__slider
        margin-left 0
      .product__descr
        text-align center
  &+&
    margin-top 22px
  &:before
    content ''
    display block
    border 10px solid accent-color
    width 100vw
    height 366px
    position absolute
    top 0
    z-index -1
  &:nth-child(odd)
    &:before
      right 779px
  &:nth-child(3)
    .product__title
      max-width 225px
  &:nth-child(even)
    text-align right
    &:before
      left 689px
    .product__head
      flex-direction row-reverse
    .product__icons
      width 100%
      max-width 390px
      margin-left 20px
      margin-right 0
      padding-left 30px
    .product__title
      max-width 190px
    .product__block
      flex-direction row-reverse
    .product__slider
      margin-right 0
      margin-left 40px
    .product__descr
      text-align left

.product__head
  display flex
  margin-bottom 25px
  @media ({screen-md})
    display none

.product__icons
  padding-top 40px
  display flex
  align-items: center
  padding-left 16px
  margin-right 50px
  @media ({screen-xl})
    padding-top 0

.product__icon
  &+&
    margin-left 40px
  .icon
    size(34px)

.product__title
  color gray-color
  font-size: 20px
  font-weight 600
  max-width 320px

.product__block
  display flex
  @media ({screen-md})
    flex-direction column-reverse

.product__slider
  width 100%
  max-width 480px
  margin-right 30px
  @media ({screen-xl})
    max-width 350px
  @media ({screen-md})
    margin-right 0
    max-width 100%

.product__img
  margin-bottom 10px
  position relative
  max-width 100%

.product__control
  background: none
  font-size 0px
  cursor pointer
  position absolute
  top 50%
  transform: translateY(-50%)
  size(32px, 44px)
  display block
  z-index 2
  &--prev
    background url(../img/general/arrow-left.png) center no-repeat
    left 20px
  &--next
    background url(../img/general/arrow-right.png) center no-repeat
    right 20px

.product__subtext
  font-size 12px
  line-height 14px

.product__info
  max-width 335px
  @media ({screen-md})
    max-width 100%
    margin-bottom 25px

.product__name
  font-size: 30px
  line-height 30px
  font-weight 600
  margin-bottom 30px
  @media ({screen-md})
    margin-bottom 20px

.product__text
  margin-bottom 20px

.product__btn
  @media ({screen-md})
    margin 0 auto