.footer
  position relative
  .container
    position relative

.footer__map
  absolute-all(0)

.footer__info
  background accent-color
  width 100%
  max-width 366px
  position absolute
  top 0
  left 0
  color white
  padding 75px 40px 80px 55px
  @media ({screen-lg})
    max-width 315px
    padding 40px
    left 50%
    transform translateX(-50%)

.footer__phone
  margin-bottom 45px
  .phone__link
    color white
    &:hover
      color darken(white, 10%)

.footer__el
  display block
  line-height 15px
  font-size 15px
  text-transform uppercase
  font-weight 600
  &+&
    margin-top 15px