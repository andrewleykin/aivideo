.top-banner
  margin-top 80px
  padding-top 140px
  padding-bottom 55px
  background url(../img/content/top-banner/bg.jpg) center no-repeat
  background-size cover
  color white
  @media ({screen-lg})
    padding-top 100px
  @media ({screen-xl})
    padding-top 30px
    padding-bottom 35px

.top-banner__wrap
  display flex
  align-items flex-end
  justify-content space-between

.top-banner__text
  font-size 30px
  line-height 34px
  font-weight 600
  width 100%
  max-width 374px

.top-banner__info
  max-width 334px

.top-banner__title
  font-size 15px
  line-height 30px
  font-weight 600
  max-width 222px
  margin-bottom 40px

.top-banner__subtitle
  display block
  font-size 20px

.top-banner__form
  margin-bottom 5px