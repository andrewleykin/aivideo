.header
  padding 15px 0px
  background #ffffff
  position fixed
  top 0
  left 0
  right 0
  min-height 80px
  z-index 2
  box-shadow 0 0 24px 0 rgba(0, 0, 0, .3)
  @media ({screen-md})
    min-height 120px
  @media ({screen-sm})
    min-height 80px

.header__wrap
  display flex
  align-items center
  justify-content space-between
  @media ({screen-md})
    flex-wrap wrap
  @media ({screen-sm})
    position relative

.header__menu
  @media ({screen-md})
    order 2
    margin 10px auto 0
  @media ({screen-sm})
    margin 0

.header__phone
  @media ({screen-sm})
    display none