.calculate
  background default-color
  padding-top 35px
  padding-bottom 45px
  color white
  .container
    max-width 1186px
  @media ({screen-lg})
    padding-top 25px
    padding-bottom 35px
  @media ({screen-xl})
    display none

.calculate__header
  display flex
  justify-content space-between
  padding 0 54px
  margin-bottom 15px
  @media ({screen-lg})
    padding 0

.calculate__title
  font-size 30px
  line-height 30px
  font-weight 600
  max-width 170px

.calculate__icons
  padding-top 15px
  display flex
  @media ({screen-lg})
    padding-top 0

.calculate__icon
  width 100%
  max-width 180px
  text-align center
  &+&
    margin-left 10px

.calculate__icon-img
  margin-bottom 15px
  .icon
    size(55px)

.calculate__icon-name
  font-size 15px  
  line-height 18px
  font-weight 600

.calculate__content
  display flex
  justify-content space-between
  padding 0 35px 30px
  position relative
  z-index 1
  margin-bottom 15px
  @media ({screen-lg})
    padding 0
    padding-bottom 30px
  &:before,&:after
    content ""
    display block
    position absolute
    left 0
    height 5px
    width calc(100% - 70px)
    margin 0 35px
    background accent-color
    z-index -1
    @media ({screen-lg})
      width 100%
      margin 0
  &:before
    top 13px
  &:after
    bottom 0

.calculate__menu
  max-width 230px
  width 100%
  padding-top 45px
  @media ({screen-lg})
    padding-top 40px

.calculate__menu-item
  display inline-block
  padding 20px 20px 15px
  border-radius 5px
  font-weight 600
  @extend .trs
  cursor pointer
  @media ({screen-lg})
    padding 10px 20px
  &+&
    margin-top 5px
  &:hover
    background accent-color
  &.active
    background accent-color

.calculate__list
  display flex
  margin-right 20px
  @media ({screen-lg})
    margin-right 17px

.calculate__item
  max-width 195px
  width 100%
  @media ({screen-lg})
    &+&
      margin-left 35px
  &.disabled
    .calculate__text
      color text-disabled-color

.calculate__item-btn
  margin-bottom 25px
  @media ({screen-lg})
    width 154px
    margin-bottom 20px

.calculate__text
  display block
  font-size 13px
  line-height 15px
  &+&
    margin-top 18px
    @media ({screen-lg})
      margin-top 14px

.calculate__footer
  padding 0 54px
  display flex
  @media ({screen-lg})
    padding 0

.calculate__group
  max-width 175px
  margin-right 10px
  text-align center

.calculate__input
  padding-left 0
  font-weight 700 
  text-align center

.calculate__sublabel
  max-width 80%
  margin 5px auto 0

.calculate__meter
  align-self: center
  display flex
  margin-right 90px
  margin-top -30px
  @media ({screen-lg})
    margin-right 65px

.calculate__meter-text
  font-size 30px
  font-weight 600

.calculate__meter-num
  font-size 15px
  font-weight 600
  display block
  margin-top -5px

.calculate__more
  margin-right 45px

.calculate__more-title
  font-weight 600
  margin-bottom 10px
  display block

.calculate__more-item
  font-size 13px

.calculate__total
  margin-right: auto
  font-size 30px
  line-height 30px
  font-weight 600

.calculate__total-num
  display block

.calculate__btn
  margin-top 10px
  &.btn
    size(195px,50px)